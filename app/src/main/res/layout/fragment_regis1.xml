<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:padding="25dp"
tools:context=".RegisFragment1">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/txtnik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK" />

    <EditText
        android:id="@+id/inputNIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_shape"
        android:ems="10"
        android:layout_marginBottom="15dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/txtnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama" />

    <EditText
        android:id="@+id/inputnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_shape"
        android:ems="10"
        android:layout_marginBottom="15dp"
        android:inputType="text" />
    <TextView
        android:id="@+id/txtlahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempat, Tanggal lahir" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/inputtempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_shape"
            android:ems="10"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/inputtanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/form_shape"
            android:ems="10"
            android:hint="use dd/mm/yyyy"
            android:inputType="date" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtkelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin" />
            <EditText
                android:id="@+id/inputkelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_shape"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtdarah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Golongan Darah" />
            <EditText
                android:id="@+id/inputdarah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_shape"
                android:ems="10"
                android:inputType="text" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtalamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat" />

    <EditText
        android:id="@+id/inputalamat"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/form_shape"
        android:ems="10"
        android:layout_marginBottom="15dp"
        android:inputType="text" />

</LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>