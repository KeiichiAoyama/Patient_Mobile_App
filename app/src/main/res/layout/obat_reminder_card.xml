<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:background="@drawable/shape_fitur"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Icon Lingkaran -->

        <!-- Deskripsi Obat -->
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namaReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SISTENOL"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/dosisReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="1 Tablet"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/waktuReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setelah Makan" />

            <TextView
                android:id="@+id/timeReminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07.20"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/checkboxReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
